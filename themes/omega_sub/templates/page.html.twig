<!-- HEADER -->
<header>
  {{page.header}}
  <div id="header_carousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#header_carousel" data-slide-to="0" class="active"></li>
      <li data-target="#header_carousel" data-slide-to="1"></li>
      <li data-target="#header_carousel" data-slide-to="2"></li>
      <li data-target="#header_carousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
      <div class="item active">
        {{page.slider}}
      </div>
      <div class="item">
        {{page.slider}}
      </div>
      <div class="item">
        {{page.slider}}
      </div>
      <div class="item">
        {{page.slider}}
      </div>
    </div>
  </div>
</header>
<div id="slider"></div>
<!-- ABOUT -->
<div id="about">
  {{page.about}}
  <a href="#" id="loadMore"></a>
</div>

<!-- VIDEO -->
<div id="video">
  <a class="btn btn-info btn-lg play_button" data-toggle="modal" data-target="#video_popup" data-theVideo="https://www.youtube.com/embed/s6zR2T9vn2c">
    <img src="../themes/omega_sub/style/img/play.png" alt="">
    <span>Watch our story</span>
  </a>
  <div class="modal fade" id="video_popup" tabindex="-1" role="dialog" aria-labelledby="videoModal" aria-hidden="true">
      <div class="modal-dialog">
          <div class="modal-content">
              <div class="modal-body">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  <div>
                      <iframe width="720" height="480" src="https://www.youtube.com/embed/s6zR2T9vn2c" frameborder="0" allowfullscreen></iframe>
                  </div>
              </div>
          </div>
      </div>
  </div>
</div>

<!-- EXPERTISE -->
<div id="expertise">
  {{page.expertise}}
</div>
<div id="team">
  {{page.team}}
</div>
<div id="works">
  {{page.works}}
</div>
<div id="testimonials">
  {{page.testimonials}}
  <div id="quotes_carousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#quotes_carousel" data-slide-to="0" class="active"></li>
      <li data-target="#quotes_carousel" data-slide-to="1"></li>
      <li data-target="#quotes_carousel" data-slide-to="2"></li>
      <li data-target="#quotes_carousel" data-slide-to="3"></li>
      <li data-target="#quotes_carousel" data-slide-to="4"></li>
    </ol>
    <div class="carousel-inner">
      <div class="item active">
        {{page.quote}}
      </div>
      <div class="item">
        {{page.quote}}
      </div>
      <div class="item">
        {{page.quote}}
      </div>
      <div class="item">
        {{page.quote}}
      </div>
      <div class="item">
        {{page.quote}}
      </div>
    </div>

  </div>
  <a class="slide_left slide_buttons" href="#quotes_carousel" data-slide="prev">
    <span class="glyphicon glyphicon-menu-left"></span>
  </a>
  <a class="slide_right slide_buttons" href="#quotes_carousel" data-slide="next">
    <span class="glyphicon glyphicon-menu-right"></span>
  </a>
</div>

</div>
<div id="contact">
{{page.contact}}
</div>
<footer>
{{page.footer}}
</footer>

<section id="content-outer-wrapper" class="outer-wrapper clearfix">
<div id="main-layout" class="{{ region_classes.main }} inner-wrapper clearfix">
  {% if page.content %}
    {{ page.content }}
  {% endif %}
</div>
<!-- /#main -->
</section>
<!-- /#main-outer-wrapper -->
